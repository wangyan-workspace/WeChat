@import "./style/iconfont.wxss";

/* 在微信小程序中 不支持通配符选择器 '*' */
page,view,text,swiper,swiper-item,image,navigator{
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

/* 
 主题颜色 通过变量来实现
 1.less中 存在 变量这个知识
 2.原生的css和wxss也是支持 变量
*/
page{
  /* 定义主题颜色 */
  --themeColor:#eb4450;
  /* 
  定义统一的字体大小 假设设计稿大小是375px
  1px = 2rpx
  */
  font-size: 24rpx;
}